<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorFondo"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"

        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">
        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView

                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_det_orden" />

            <TextView
                android:id="@+id/cantidad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:fontFamily="@font/basier_semi_bold"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:lines="2"
                android:text="12"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/nombre"
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:maxLines="2"
            android:fontFamily="@font/basier_semi_bold"
            android:text="Tartaleta de Chocolates"
            android:textColor="@color/colorTextGris"
            android:textSize="15dp" />

        <CheckBox
            android:visibility="gone"
            android:layout_weight="10"
            android:id="@+id/seleccion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:buttonTint="@color/colorTextGris"
            android:gravity="center" />
        <RadioButton
            android:visibility="gone"
            android:layout_weight="10"
            android:id="@+id/seleccion_radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:buttonTint="@color/colorTextGris"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>