<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFondo3"
    tools:context=".ui.fragment.PerfilComercioFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_ver"
        android:layout_marginTop="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFondo">

                <ImageView
                    android:id="@+id/img_producto"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/principal_comercio" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img_producto"

                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-70dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:src="@color/colorPrimaryDark"
                    app:civ_border_color="#0000"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/tiempo_espera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img_producto"
                    android:layout_alignBottom="@+id/profile_image"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-51dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/basier_semi_bold"
                    android:gravity="center|top"
                    android:text="30 min"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_logo_comercio"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/img_producto"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-50dp"
                    android:src="@drawable/logo_teclena"

                    app:civ_border_color="#0000"
                    app:civ_border_width="3dp" />

                <LinearLayout
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_producto"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/nombre_comercio"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/basier_semi_bold"
                        android:gravity="left|center"
                        android:maxLines="2"
                        android:text="LA TECLEÃ‘A "
                        android:textColor="@color/colorTextBlue"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/sub_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/basier_regular"
                        android:gravity="left"
                        android:text="Panaderia y Restaurante"
                        android:textColor="@color/colorTextGris"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorFondo"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="100">



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:background="@color/colorFondo"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basier_semi_bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Horarios"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/horario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basier_regular"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="8:00 am / 9:00 pm"
                        android:textColor="@color/colorTextGris"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basier_semi_bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Minimo"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/minimo_consumo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basier_regular"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="$5"
                        android:textColor="@color/colorTextGris"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:weightSum="100"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/calificacion"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/basier_semi_bold"
                        android:gravity="center|right"
                        android:padding="5dp"
                        android:text="5"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="25dp" />
                    <RelativeLayout
                        android:gravity="center|left"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_grade_24" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/colorFondo"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basier_semi_bold"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="Acerca de nosotros"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/acerca_nosotros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basier_regular"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Todo inicia hace mÃ¡s de 50 aÃ±os cuando una talentosa mujer sabÃ­a que tenÃ­a un gran sazÃ³n en la comida y decide emprender su propio negocio llamado Tienda las victorias, pasando los aÃ±os se toma una gran decisiÃ³n la cual es elaborar pan dulce. El coraje y la visiÃ³n del negocio hace que la tienda de conveniencia se convierta en una panaderÃ­a."
                    android:textColor="@color/colorTextGris"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@color/colorFondo"
                android:orientation="vertical"
                android:weightSum="100">
                <com.github.islamkhsh.CardSliderViewPager
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"

                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="20dp"
                    app:cardSlider_smallScaleFactor="0.9"
                    app:cardSlider_otherPagesWidth="40dp"
                    app:cardSlider_pageMargin="5dp"
                    app:cardSlider_baseShadow="5dp"
                    app:cardSlider_indicator="@id/indicator"
                    app:cardSlider_smallAlphaFactor="0.5"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewPager"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_tipo_prod_list"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <com.github.islamkhsh.CardSliderIndicator
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/indicator"
                        app:indicatorsToShow="-1" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_ver"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/colorFondo"
        android:layout_height="70dp">
        <Button
            android:id="@+id/resumen_orden"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:background="@drawable/roundedbutton"
            android:textSize="15dp"
            android:text="Resumen de Orden- $56.00"
            android:fontFamily="@font/arlrdbd"
            android:textColor="#ffff" />
    </RelativeLayout>

</RelativeLayout>