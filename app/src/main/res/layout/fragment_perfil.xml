<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.PerfilFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <LinearLayout

            android:visibility="visible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/perfil_background_top">

                </ImageView>

                <ImageView
                    android:id="@+id/img_producto"
                    android:layout_width="240dp"
                    android:layout_height="140dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/perfil_background_lazo" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    android:src="@drawable/perfil"
                    android:visibility="visible"
                    app:civ_border_color="#0000"
                    app:civ_border_width="3dp" />

                <LinearLayout
                    android:layout_toRightOf="@id/profile_image"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="100dp">
                    <TextView
                        android:gravity="left"
                        android:fontFamily="@font/basier_semi_bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:text="¡Buen día!"
                        android:layout_marginBottom="0dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/nombre"
                        android:gravity="left"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/basier_semi_bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/correo"
                        android:gravity="center"
                        android:fontFamily="@font/basier_semi_bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/img_producto"
                    android:layout_alignParentBottom="true"
                    android:weightSum="100"

                    android:background="@drawable/rounded_background"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center|bottom"
                            android:fontFamily="@font/basier_semi_bold"
                            android:textSize="25dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_weight="60"
                            android:layout_width="match_parent"
                            android:text="$0.00"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:gravity="center|top"
                            android:fontFamily="@font/basier_semi_bold"
                            android:textSize="15dp"
                            android:textColor="@color/colorTextGris"
                            android:layout_weight="40"
                            android:layout_width="match_parent"
                            android:text="Wercoins"
                            android:layout_height="0dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:layout_width="2dp"
                        android:layout_height="60dp"
                        android:background="@color/colorFondo2"/>
                    <LinearLayout
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center|bottom"
                            android:fontFamily="@font/basier_semi_bold"
                            android:textSize="25dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_weight="60"
                            android:layout_width="match_parent"
                            android:text="0"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:gravity="center|top"
                            android:fontFamily="@font/basier_semi_bold"
                            android:textSize="15dp"
                            android:textColor="@color/colorTextGris"
                            android:layout_weight="40"
                            android:layout_width="match_parent"
                            android:text="Premios"
                            android:layout_height="0dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background_item"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:id="@+id/tus_direcciones"
                        android:background="@drawable/rounded_background_item"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|top"
                            android:layout_weight="40"
                            android:layout_height="0dp">
                            <ImageView
                                android:visibility="visible"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ubicacion_perfil" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="60"
                            android:weightSum="100"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:paddingLeft="10dp"
                                android:orientation="vertical"
                                android:layout_weight="80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:gravity="left|center"
                                    android:fontFamily="@font/basier_semi_bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorText"
                                    android:layout_width="match_parent"
                                    android:text="Direcciones"
                                    android:layout_height="match_parent"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/baseline_chevron_right_24" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_background_item"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:id="@+id/tus_formas_de_pago"
                        android:background="@drawable/rounded_background_item"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|top"
                            android:layout_weight="40"
                            android:layout_height="0dp">
                            <ImageView
                                android:visibility="visible"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/card_perfil" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="60"
                            android:weightSum="100"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:paddingLeft="10dp"
                                android:orientation="vertical"
                                android:layout_weight="80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:gravity="left|center"
                                    android:fontFamily="@font/basier_semi_bold"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:text="Métodos de pago"
                                    android:layout_height="match_parent"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="20"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/baseline_chevron_right_24" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_background_item"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="50"
                android:layout_height="120dp">


                <LinearLayout
                    android:id="@+id/acerca_weris"
                    android:background="@drawable/rounded_background_item"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|top"
                        android:layout_weight="40"
                        android:layout_height="0dp">
                        <ImageView
                            android:visibility="visible"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/weris_perfil" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="60"
                        android:weightSum="100"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="80"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="left|center"
                                android:fontFamily="@font/basier_semi_bold"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:text="Acerca de Weris"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/baseline_chevron_right_24" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_background_item"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_marginTop="0dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:id="@+id/ayuda"
                    android:background="@drawable/rounded_background_item"
                    android:orientation="vertical"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|top"
                        android:layout_weight="40"
                        android:layout_height="0dp">
                        <ImageView
                            android:visibility="visible"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/help_perfil" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="60"
                        android:weightSum="100"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="80"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="left|center"
                                android:fontFamily="@font/basier_semi_bold"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:text="Ayuda"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:src="@drawable/baseline_chevron_right_24" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>




            <Button

                android:id="@+id/cerrar_sesion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundedbutton"
                android:fontFamily="@font/basier_semi_bold"
                android:text="Cerrar sesión"
                android:textAllCaps="false"
                android:textColor="#ffff"
                android:textSize="15dp" />

            <LinearLayout
                android:visibility="gone"

                android:background="@color/colorFondo"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="80dp">
                <LinearLayout
                    android:paddingLeft="50dp"
                    android:orientation="vertical"
                    android:layout_weight="80"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>