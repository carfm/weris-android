<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:padding="5dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:padding="5dp"
        card_view:contentPadding="0dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:weightSum="100">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:background="@drawable/bg_item"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/burger_king" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_weight="30"
                android:background="@color/colorFondo3"

                android:layout_height="0dp">
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="25"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:padding="2dp"
                        android:id="@+id/favorito"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/favorito_sin_seleccionar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75"
                    android:background="@color/colorFondo3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:padding="5dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/tools"
                            android:id="@+id/logo"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:civ_border_color="#0000"
                            app:civ_border_width="1dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo_bk" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <TextView
                            android:gravity="center|left"
                            android:id="@+id/nombre"
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="60"
                            android:fontFamily="@font/basier_semi_bold"
                            android:text="Monster Burritos "
                            android:maxLines="2"
                            android:textColor="@color/colorTextBlue"
                            android:textSize="12dp" />

                        <TextView
                            android:gravity="top"
                            android:id="@+id/categoria"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:fontFamily="@font/basier_regular"
                            android:text="30 min"
                            android:layout_weight="30"
                            android:textColor="@color/colorTextGris"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>