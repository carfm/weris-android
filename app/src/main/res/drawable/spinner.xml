<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="10dp"
                        android:bottom="4dp"
                        />

                    <gradient android:startColor="@color/colorCelesteClaro" android:endColor="@color/colorCelesteClaro"
                        android:angle="270" />
                    <stroke android:width="10px" android:color="@color/colorCelesteClaro" />
                    <corners android:radius="11dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/dropdown"
                android:gravity="center|right"
                android:width="15dp" android:height="10dp">

            </item>

        </layer-list>
    </item>
</selector>